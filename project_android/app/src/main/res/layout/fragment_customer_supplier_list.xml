<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorScreenBg"
    android:clickable="true"
    android:id="@+id/llMainView">


    <!-- Tabs Option Section -->
    <LinearLayout
        android:id="@+id/llTabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x52"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/x10"
        style="?attr/primaryButtonTheme"
        android:visibility="visible"
        android:background="?attr/colorPrimary">


        <!-- Customer Tab -->
        <TextView
            android:id="@+id/tvCustomer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="?attr/buttonTextColor"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:textSize="@dimen/s12"
            android:text="@string/customer"
            android:background="?attr/colorPrimaryDark"/>



        <!-- Supplier Tab -->
        <TextView
            android:id="@+id/tvSupplier"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="?attr/buttonTextColor"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:textSize="@dimen/s12"
            android:text="@string/supplier"/>




    </LinearLayout>
    <!-- Tabs Option Section -->

    <!-- Main Section -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">



        <!--Customer Section -->
        <LinearLayout
            android:id="@+id/llCustomerSectionContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--Customer Invitation Section -->
            <LinearLayout
                android:id="@+id/llCustomerInvitationSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/x16"
                android:paddingEnd="@dimen/x16"
                android:paddingTop="@dimen/x20"
                android:paddingBottom="@dimen/x20"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginEnd="@dimen/x15"
                android:layout_marginTop="@dimen/x7"
                android:layout_marginBottom="@dimen/x7"
                android:background="@drawable/dialog_round_bg"
                android:gravity="center_vertical"
                android:elevation="@dimen/x3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/x15"
                    android:layout_marginEnd="@dimen/x15">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/primaryTextColor"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="@dimen/s14"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/invitation"/>

                </LinearLayout>



                <ImageView
                    android:layout_width="@dimen/x15"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_marginEnd="@dimen/x10"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <!--Customer Invitation Section -->

            <!-- Customer List Section -->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/flCustomerListSectionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- NearBy Land Listing  -->

                    <android.support.v4.widget.SwipeRefreshLayout
                        android:id="@+id/swipeRefreshCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvCustomer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/x10"/>

                    </android.support.v4.widget.SwipeRefreshLayout>

                </FrameLayout>

                <!-- No data Found  Section -->
                <LinearLayout
                    android:id="@+id/llNoCustomerDataFound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/x5"
                    android:layout_marginEnd="@dimen/x5"
                    android:layout_gravity="center"
                    android:padding="@dimen/x5"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/primaryTextColor"
                        android:fontFamily="@font/lato_black"
                        android:textSize="@dimen/s12"
                        android:text="@string/no_customers_found"
                        android:layout_marginEnd="@dimen/x5"/>

                </LinearLayout>
                <!-- No data Found Section -->

            </FrameLayout>

            <!-- Customer  List Section  -->

        </LinearLayout>
        <!--Customer Section -->



        <!--Supplier Section -->
        <LinearLayout
            android:id="@+id/llSupplierSectionContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">


            <!--Supplier Invitation Section -->
            <LinearLayout
                android:id="@+id/llSupplierInvitationSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/x16"
                android:paddingEnd="@dimen/x16"
                android:paddingTop="@dimen/x20"
                android:paddingBottom="@dimen/x20"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginEnd="@dimen/x15"
                android:layout_marginTop="@dimen/x7"
                android:layout_marginBottom="@dimen/x7"
                android:background="@drawable/dialog_round_bg"
                android:gravity="center_vertical"
                android:elevation="@dimen/x3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/x15"
                    android:layout_marginEnd="@dimen/x15">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/primaryTextColor"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="@dimen/s14"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/invitation"/>

                </LinearLayout>



                <ImageView
                    android:layout_width="@dimen/x15"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_marginEnd="@dimen/x10"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <!--Supplier Invitation Section -->

            <!-- Supplier List Section -->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/flSupplierListSectionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <!-- Supplier Listing  -->

                    <android.support.v4.widget.SwipeRefreshLayout
                        android:id="@+id/swipeRefreshSupplier"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvSupplier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/x10"/>

                    </android.support.v4.widget.SwipeRefreshLayout>

                    <!-- Supplier Listing -->

                </FrameLayout>

                <!-- No data Found  Section -->
                <LinearLayout
                    android:id="@+id/llNoSupplierDataFound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/x5"
                    android:layout_marginEnd="@dimen/x5"
                    android:layout_gravity="center"
                    android:padding="@dimen/x5"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/primaryTextColor"
                        android:fontFamily="@font/lato_black"
                        android:textSize="@dimen/s12"
                        android:text="@string/no_supplier_found"
                        android:layout_marginEnd="@dimen/x5"/>

                </LinearLayout>
                <!-- No data Found Section -->

            </FrameLayout>
            <!-- Supplier  List Section  -->

        </LinearLayout>
        <!--Supplier Section -->


    </FrameLayout>
    <!-- Main Section -->

</LinearLayout>