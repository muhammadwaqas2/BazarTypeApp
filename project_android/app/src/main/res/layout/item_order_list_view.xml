<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMainView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/x15"
    android:paddingStart="@dimen/x10"
    android:paddingEnd="@dimen/x10"
    android:layout_marginTop="@dimen/x7"
    android:layout_marginBottom="@dimen/x7"
    android:background="@color/white"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_gravity="center"
            android:src="@drawable/image_placeholder"
            app:civ_border_color="@color/transparent"
            app:civ_border_width="@dimen/x2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="@dimen/x15"
            android:layout_marginEnd="@dimen/x15">


            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/primaryTextColor"
                android:fontFamily="@font/lato_bold"
                android:textSize="@dimen/s14"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="N/A"/>


            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/secondaryTextColor"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="@dimen/x3"
                android:textSize="@dimen/s11"
                android:drawableStart="@drawable/ic_svg_location"
                android:layout_marginBottom="@dimen/x2"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="-"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/secondaryTextColor"
                android:fontFamily="@font/lato_bold"
                android:textSize="@dimen/s12"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="end"
                android:layout_marginBottom="@dimen/x5"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/secondaryTextColor"
                android:fontFamily="@font/lato_bold"
                android:textSize="@dimen/s12"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="end"/>

        </LinearLayout>
<!--        <ImageView-->
<!--            android:id="@+id/ivAddLink"-->
<!--            android:layout_width="@dimen/x30"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:src="@drawable/ic_user_add"-->
<!--            android:layout_marginEnd="@dimen/x10"-->
<!--            android:layout_gravity="center"-->
<!--            android:visibility="visible"/>-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/light_grey"
        android:layout_marginTop="@dimen/x10"/>

</LinearLayout>