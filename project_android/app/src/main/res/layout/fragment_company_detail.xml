<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="?attr/colorScreenBg"
    android:clickable="true">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorScreenBg"
            android:paddingStart="@dimen/x10"
            android:paddingEnd="@dimen/x10"
            android:id="@+id/llMainView"
            android:clickable="true">




            <!-- Profile Image  -->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileCoverImage"
                android:layout_marginTop="@dimen/x30"
                android:layout_marginBottom="@dimen/x30"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/x110"
                android:layout_gravity="center"
                android:src="@drawable/image_placeholder"
                app:civ_border_color="@color/transparent"
                app:civ_border_width="@dimen/x2"/>

            <!-- Profile Image  -->


            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="?attr/primaryTextColor"
                android:fontFamily="@font/lato_bold"
                android:textSize="@dimen/s19"
                android:gravity="center"
                android:text="N/A"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginEnd="@dimen/x15"/>

            <TextView
                android:id="@+id/tvProfileCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="?attr/secondaryTextColor"
                android:fontFamily="@font/lato_bold"
                android:textSize="@dimen/s15"
                android:gravity="center"
                android:text="N/A"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginStart="@dimen/x15"
                android:layout_marginEnd="@dimen/x15"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/x10"
                android:paddingEnd="@dimen/x10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/x10"
                    android:paddingBottom="@dimen/x10">


                    <ImageView
                        android:layout_width="@dimen/x20"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x10"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_svg_phonecall"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvProfilePhoneNo"
                        style="?attr/primaryEdiTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="N/A"
                        android:maxLength="250"
                        android:maxLines="3" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="?attr/secondaryTextColor" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/x10"
                android:paddingEnd="@dimen/x10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/x10"
                    android:paddingBottom="@dimen/x10">


                    <ImageView
                        android:layout_width="@dimen/x20"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x10"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_svg_location"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvProfileAddress"
                        style="?attr/primaryEdiTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="N/A"
                        android:maxLength="1000"
                        android:maxLines="3" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="?attr/secondaryTextColor" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/x10"
                android:paddingEnd="@dimen/x10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/x10"
                    android:paddingBottom="@dimen/x10">


                    <ImageView
                        android:layout_width="@dimen/x20"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x10"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_svg_city"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvProfileCity"
                        style="?attr/primaryEdiTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="N/A"
                        android:maxLength="250"
                        android:maxLines="3" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="?attr/secondaryTextColor" />

            </LinearLayout>


            <!-- Show Product -->
            <LinearLayout
                android:id="@+id/llShowProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/x10"
                android:paddingEnd="@dimen/x10"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/x10"
                    android:paddingBottom="@dimen/x10">


<!--                    <ImageView-->
<!--                        android:layout_width="@dimen/x20"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginEnd="@dimen/x10"-->
<!--                        android:adjustViewBounds="true"-->
<!--                        android:src="@drawable/ic_products"-->
<!--                        android:visibility="visible" />-->

                    <TextView
                        style="?attr/primaryEdiTextTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/show_product"
                        android:maxLength="250"
                        android:maxLines="3" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="?attr/secondaryTextColor" />

            </LinearLayout>
            <!-- Show Product -->



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/x10"
                android:paddingEnd="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginBottom="@dimen/x10">

                <ImageView
                    android:id="@+id/ivProfileMapView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x250"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_placeholder"
                    android:visibility="gone"/>


            </FrameLayout>


        </LinearLayout>


